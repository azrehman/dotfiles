[global]
	class = Dunst
	title = Dunst
    font = SF Mono 12
    markup = yes
    format = "%s %p\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x10-10+48"
	corner_radius = 8
    # transparency = 10
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
	history_length = 20
    line_height = 5
    separator_height = 0
    padding = 10
    horizontal_padding = 10
    separator_color = frame
    startup_notification = false
    show_indicators = no
    dmenu = rofi -theme onedark_dmenu -dmenu -p dunst
    browser = /usr/bin/firefox -new-tab
    icon_path = /usr/share/icons/Numix-Circle
    icon_position = left
	max_icon_size = 64

	mouse_left_click = do_action, close_current
    mouse_middle_click = close_current
    mouse_right_click = close_all

[frame]
    frame_color = "#ffb7c5"
    frame_width = 0

[shortcuts]
    close = mod1+space
    close_all = mod1+shift+space
    context = mod1+shift+period
    history = mod1+shift

[urgency_low]
	background = "#1c282e"
    foreground = "#e6e6e6"
	# frame_color = "#ffb7c5"
    timeout = 4

[urgency_normal]
	background = "#1c282e"
    foreground = "#e6e6e6"
	frame_color = "#ffb7c5"
    timeout = 5

[urgency_critical]
	background = "#1c282e"
    foreground = "#e6e6e6"
	timeout = 8
